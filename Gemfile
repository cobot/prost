source 'http://rubygems.org'

gem 'rails'
gem 'pg'
gem 'omniauth'
gem 'omniauth-oauth2'
gem 'simple_form'
gem 'inherited_resources'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

# Use unicorn as the web server
# gem 'unicorn'

group :development do
  gem 'rspec-rails'
end

group :test do
  gem 'database_cleaner'
  gem 'capybara'
  gem 'webmock'
  gem 'launchy'
end
